#!/system/bin/sh
# chmod -R 755 /system/etc/init.d
# osm0sis @ xda-developers

# restore media_profiles.xml if switching to another kernel from DirtyV
busybox mount -o rw,remount /system;
case `uname -r` in
  *DirtyV*|*SmittyV) ;;
  *) [ -e /system/etc/media_profiles.xml.dvbak ] && mv /system/etc/media_profiles.xml.dvbak /system/etc/media_profiles.xml;
     [ -e /system/etc/media_profiles.xml.dvbak ] || rm -f /system/etc/init.d/dvmediarevert;
     chmod 644 /system/etc/media_profiles.xml;;
esac;
busybox mount -o ro,remount /system;

